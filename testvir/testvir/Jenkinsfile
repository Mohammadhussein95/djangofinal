     stage ("Install Application Dependencies") {
         steps {
            sh '''
            source project/bin/activate
            pip install -r <relative path to requirements file>
            deactivate
           '''
         }
    }
    
    
     stage ("Collect Static files") {
         steps {
            sh '''
            source project/bin/activate
            python manage.py collectstatic --noinput
            deactivate
           '''
         }    }
    }
    }
